{
  "name": "oztest",
  "version": "0.0.1",
  "description": "DevOZ - Tech test",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "test": "mocha --require ts-node/register ./src/tests/**/*.spec.ts --exit",
    "test:unit": "mocha -r ts-node/register ./src/tests/unit/**/*.test.ts",
    "test:integration": "mocha -r ts-node/register ./src/tests/integration/**/*.test.ts",
    "coverage": "nyc mocha -r ts-node/register ./src/tests/**/*.test.ts",
    "compose:up": "docker compose up -d --build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.13.3",
    "mongoose": "^7.5.3",
    "nyc": "^17.1.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/express": "^4.17.22",
    "@types/joi": "^17.2.2",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.0",
    "@types/sinon": "^17.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "chai": "^5.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sinon": "^20.0.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}